ZSH_THEME="powerlevel10k"

# Which plugins would you like to load?
# Standard plugins can be found in $ZSH/plugins/
# Custom plugins may be added to $ZSH_CUSTOM/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(
    aws
    colorize
    dnf
    docker
    docker-compose
    git
    git-flow
    helm
    kubectl
    npm
    ssh-agent
    zsh-syntax-highlighting
    zsh-autosuggestions
)

alias w='feh --randomize --bg-fill ~/.wallpapers/*'
alias ww='feh --randomize --bg-fill ~/.wallpapers/photos/*'
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

alias sshMaster='ssh -i "~/.ssh/linux-foundation-course-key.pem" ubuntu@ec2-18-185-215-175.eu-central-1.compute.amazonaws.com'
alias sshNode='ssh -i "~/.ssh/linux-foundation-course-key.pem" ubuntu@ec2-18-196-41-185.eu-central-1.compute.amazonaws.com'

source /usr/share/zsh-theme-powerlevel10k/powerlevel10k.zsh-theme

alias vim="nvim"
alias vZsh="vim ~/.zshrc-personal"
alias vAwesome="vim ~/.config/awesome/rc.lua"

# Dotfiles
alias .install="sh ~/.dotfiles/install/install.sh"
alias .installSoftware="sh ~/.dotfiles/install/arch/install.sh"
alias .sync="sh ~/.dotfiles/install/sync.sh"

# Desktop settings
alias dtScreens="xrandr --output DisplayPort-0 --mode 2560x1440 --pos 0x360 --rotate normal --output DisplayPort-1 --primary --mode 3840x2160 --pos 2560x0 --rotate normal --output DisplayPort-2 --off --output HDMI-A-0 --mode 2560x1440 --pos 6400x360 --rotate normal"
alias dtInit="spotify"

# Laptop settings
alias ltScreens="xrandr --auto --output HDMI1 --mode 1920x1080 --left-of eDP1"

#list
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -la'
alias l='ls'
alias l.="ls -A | egrep '^\.'"

#fix obvious typo's
alias cd..='cd ..'
alias pdw="pwd"
alias udpate='sudo pacman -Syyu'
alias upate='sudo pacman -Syyu'

#readable output
alias df='df -h'

#pacman unlock
alias unlock="sudo rm /var/lib/pacman/db.lck"

# Aliases for software managment
# pacman or pm
alias pacman='sudo pacman --color auto'
alias update='sudo pacman -Syyu'
alias upall='paru -Syu --noconfirm'
alias aur-show='paru -Qua'
alias aur-update='paru -Sua'

#hardware info --short
alias hw="hwinfo --short"

#get fastest mirrors in your neighborhood
alias mirror="sudo reflector -f 30 -l 30 --number 10 --verbose --save /etc/pacman.d/mirrorlist"
alias mirrord="sudo reflector --latest 50 --number 20 --sort delay --save /etc/pacman.d/mirrorlist"
alias mirrors="sudo reflector --latest 50 --number 20 --sort score --save /etc/pacman.d/mirrorlist"
alias mirrora="sudo reflector --latest 50 --number 20 --sort age --save /etc/pacman.d/mirrorlist"

#Recent Installed Packages
alias rip="expac --timefmt='%Y-%m-%d %T' '%l\t%n %v' | sort | tail -200 | nl"
alias riplong="expac --timefmt='%Y-%m-%d %T' '%l\t%n %v' | sort | tail -3000 | nl"

#Cleanup orphaned packages
alias cleanup='sudo pacman -Rns $(pacman -Qtdq)'

#shutdown or reboot
alias ssn="sudo shutdown now"
alias sr="sudo reboot"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh


# export PATH
export CHROME_BIN=/usr/bin/chromium
export PATH=~/.cargo/bin:$PATH
export PATH=~/.krew/bin:$PATH

